<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:background="@drawable/setting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ExamName"
            android:layout_width="1070dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="考试名称"
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/tvSetting"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/TVExit"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="退出"
            android:textColor="#ffffff"
            android:textSize="25dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingRight="5dip">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="考站："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/KaoZhan"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="dfeefre"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="房间："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/FangJian"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="401"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="评分表个数："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/PingFenBiaoCount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="30dip">

        <com.example.webview.SegmentView
            android:id="@+id/segView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:background="#DFDEE3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="照片"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />
        <!--  <TextView
        android:layout_width="150dip"
        android:layout_height="wrap_content"
         android:textSize="21dip"
         android:text="姓名"
         android:gravity="center"
         android:textColor="@color/ScoreMainFontColor"
        /> -->
        <TextView
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="考试时间"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="考号"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="学号"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="班级"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="220dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分数"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/LVList"
            android:layout_width="1280dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@color/linecolor"
            android:dividerHeight="1px"
            android:fastScrollEnabled="true"
            android:gravity="center"
            android:listSelector="@color/SelectBgColor"></ListView>
    </LinearLayout>
</LinearLayout>

