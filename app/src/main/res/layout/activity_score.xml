<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:background="@drawable/setting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="96dip"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TVBack"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="&lt; 返回"
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:gravity="right"
            android:text="姓名："
            android:textColor="#ffffff"
            android:textSize="25dip"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/StudentName"
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:gravity="left"
            android:text="学生姓名"
            android:textColor="#ffffff"
            android:textSize="25dip"
            android:visibility="invisible" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="right"
            android:text="考号："
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/kaohao"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/TVshezhi"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/TVyulan"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="25dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingRight="5dip">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="考站："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/KaoZhan"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="dfeefre"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="房间："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/FangJian"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="401"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="评分表个数："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/PingFenBiaoCount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingRight="5dip">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="评分表："
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/PingFenBiaoName"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="评分表名称"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="总分值:"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/TotalScore"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="实际得分:"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/ActualScore"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="20dip" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/chronometer"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:background="#DFDEE3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="620dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="内容"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分值"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="得分"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />

        <TextView
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="操作"
            android:textColor="@color/ScoreMainFontColor"
            android:textSize="21dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/LVList"
            android:layout_width="1280dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:childDivider="@color/linecolor"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            android:fastScrollEnabled="true"
            android:gravity="center"></ExpandableListView>
    </LinearLayout>
</LinearLayout>

